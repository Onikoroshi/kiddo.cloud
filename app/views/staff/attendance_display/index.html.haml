.col-md-6.col-sm-8.col-md-offset-3.col-sm-offset-2
  %h2
    Staff Clock-in/Clock-out

  #location-switcher
  = form_tag staff_attendance_display_index_path, method: :get do
    = select_tag "staff-location-switcher", options_from_collection_for_select(@center.locations, 'id', 'name', @location.try(:id)),
      { class: "location-switcher" }

  #time-entry-message

  #time-entries
    %ul
      - @center.users.staff.all.each do |u|
        %li= u.staff.full_name
        .togglebutton
          %label
            = check_box_tag :on_clock, true, u.staff.on_clock?, :data => {:remote => true, :url => url_for( controller: "/time_entries", :action => 'create', params: {"time_entry[location_id]" => "1", "time_entry[time_recordable_id]" => u.staff.id, "time_entry[time_recordable_type]" => "Staff"}), :method => :post}, :class => 'input-large'

  = link_to "Dispute Time In / Time Out", new_staff_time_dispute_path




