.row
  .col-md-6.col-sm-8.col-md-offset-3.col-sm-offset-2
    = form_for([:staff, @plan]) do |f|
      = render "application/form_errors", object: @plan

      .form-group.label-floating
        = f.label :plan_type, "Plan Type", class: "control-label"
        = f.select :plan_type, options_from_collection_for_select(PlanType.all, 'to_s', 'text'), class: "form-control"
      %br

      .form-group.label-floating
        = f.label :display_name, "Display Name", class: "control-label"
        = f.text_field :display_name, class: "form-control"

      .form-group.label-floating
        = f.label :short_code, "Short Code (no spaces, please)", class: "control-label"
        = f.text_field :short_code, class: "form-control"

      .form-group.label-floating
        = f.label :price, "Plan Price", class: "control-label"
        = f.text_field :price, class: "form-control"

      .form-group.label-floating
        = f.label :days_per_week, "Number Days Per Week child will attend", class: "control-label"
        = f.text_field :days_per_week, class: "form-control"

      .form-group.label-floating
        = f.label :program, "Program", class: "control-label"
        = f.select :program, options_from_collection_for_select(Program.all, 'id', 'name'), class: "form-control"

      = link_to "Cancel", staff_plans_path, class: "btn"
      = f.submit class: "btn btn-info pull-right"
