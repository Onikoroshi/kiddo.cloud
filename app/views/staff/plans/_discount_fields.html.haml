.nested-fields
  = f.hidden_field :plan_id, value: @plan.id

  .form-group.label-floating
    = f.label :amount, "Amount to discount", class: "control-label"
    = f.text_field :amount, class: "form-control"

  .form-group.label-floating
    = f.label :starts_on, "When should the discount start?", class: "control-label"
    = f.text_field :starts_on, class: "form-control flatpickr-date"

  .form-group.label-floating
    = f.label :stops_on, "When should the discount end?", class: "control-label"
    = f.text_field :stops_on, class: "form-control flatpickr-date"

  .form-group.label-floating
    = link_to_remove_association "Remove Discount", f
