%h3.text-center
  Staff


.row
  - if @staff.any?
    .row
      .table-responsive
        %table.table
          %thead
            %tr
              %th Name
              %th Email
              %th Location
              %th Date Created
              %th Actions
          %tbody
            - @staff.each do |s|
              %tr
                %td=s.user.full_name
                %td=s.user.email
                %td=s.locations.collect {|l| l.name }.to_sentence
                %td=s.created_at.stamp("Monday November 5, 2017")
                %td=link_to "Edit", edit_staff_staff_path(s), class: "btn btn-xs"


