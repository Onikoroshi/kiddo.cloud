%h3
  Staff

- if @staff.any?
  .row
    .table-responsive
      %table.table
        %thead
          %tr
            %th Name
            %th Email
            %th Location
            %th Date Created
        %tbody
          - @staff.each do |s|
            %tr
              %td=s.user.full_name
              %td=s.user.email
              %td=s.locations.collect {|l| l.name }.to_sentence
              %td=s.created_at.stamp("Monday November 5, 2017")

  .text-center
    = paginate @staff
