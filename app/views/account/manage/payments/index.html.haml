.pull-right
  = link_to "Receipts Summary", summary_account_dashboard_payments_path(@account), class: "btn btn-primary"

- if @transactions.any?
  .col-xs-12{style: "padding-top: 40px;"}
    .account-box
      %table{style: "width: 100%;"}
        %thead
          %th Transaction Type
          %th Payment Date
          %th Payment Amount
          %th

        %tbody
          - @transactions.each do |transaction|
            %tr
              %td= transaction.transaction_type.text
              %td= transaction.created_at.in_time_zone.strftime("%m/%d/%Y at %I:%M %p")
              %td= transaction.amount
              %td= link_to "Details & Receipt", account_dashboard_payment_path(@account, transaction)
