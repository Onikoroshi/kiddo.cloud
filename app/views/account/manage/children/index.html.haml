%p#notice= notice

- @account.children.each do |c|
  .col-md-4
    .card
      .card-content
        %h4.card-title
          = c.full_name
        .footer
          .author
            Born:
            = c.birthdate
          .stats
            %i.material-icons favorite
            = link_to 'Edit', edit_account_dashboard_child_path(@account, c)
            %i.material-icons chat_bubble
            = link_to 'Remove', account_dashboard_child_path(@account, c), method: :delete, data: { confirm: 'Are you sure?' }

.col-md-4
  .card
    .card-content.content-success
      .footer.text-center
        = link_to "Add Another Child", new_account_dashboard_child_path(@account), class: "btn btn-white btn-round"
%br/

= link_to 'Back to Overview', account_dashboard_path(@account), class: "btn"
